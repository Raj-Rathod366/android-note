<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Root container: add your UI here later -->

    <TextView
        android:id="@+id/Journal"
        android:layout_width="129dp"
        android:layout_height="50dp"
        android:background="#000000"
        android:text="Journal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="74dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="#000000"
        android:textSize="34sp"

        app:backgroundTint="#D1971A"
        app:cornerRadius="100dp"
        app:rippleColor="#922323"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="281dp"
        tools:layout_editor_absoluteY="598dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/journalCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"

        app:cardBackgroundColor="#232222"
        app:cardCornerRadius="20dp"

        app:layout_constraintTop_toBottomOf="@id/Journal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Card content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am feeling"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cardSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Write your thoughts here..."
                android:textColor="#BDBDBD"
                android:textSize="14sp"
                android:layout_marginTop="6dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
